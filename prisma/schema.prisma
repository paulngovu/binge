// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  username      String    @id
  password      String
  filterQuery   String
  mealType      String[]
  cusineType    String[]
  dishType      String[]
}

model like {
  id            Int       @default(autoincrement()) @id
  foodId        Int
  username      String
}

model message {
  id            Int       @default(autoincrement()) @id
  sentByUser    Boolean
  username      String
  foodId        String
  message       String
  timeSent      DateTime
}

model recipe {
  id            Int       @default(autoincrement()) @id
  name          String
  url           String
  ingredients   String[]
  calories      Int
  allergies     String[]
  imageUrl      String
  cuisineType   String[]
  mealType      String[]
  dishType      String[]
}
