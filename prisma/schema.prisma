// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  username      String    @id
  password      String
  bio           String
  filterQuery   String
  mealType      String[]
  cusineType    String[]
  dishType      String[]
}

model Like {
  id            Int       @default(autoincrement()) @id
  foodname      String
  username      String
}

model Message {
  id            Int       @default(autoincrement()) @id
  sentByUser    Boolean
  username      String
  foodname      String
  message       String
  timeSent      DateTime
}

model Recipe {
  id            Int       @default(autoincrement()) @id
  name          String
  url           String
  ingredients   String[]
  calories      Int
  allergies     String[]
  imageUrl      String
  cuisineType   String[]
  mealType      String[]
  dishType      String[]
}
